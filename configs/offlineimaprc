[general]
accounts = {{USER}}-private, {{USER}}-work

[mbnames]
enabled = yes
filename = ~/.mutt/mailboxes
header = "mailboxes "
peritem = "+$(accountname)/%(foldername)s"
sep = " "
footer = "\n"

[Account {{USER}}-private]
localrepository = {{USER}}-local-private
remoterepository = {{USER}}-gmail-private

[Repository {{USER}}-local-private]
type = Maildir
localfolders = ~/Mail/private

[Repository {{USER}}-gmail-private]
type = Gmail
remoteuser = {{EMAIL}}
remotepass = {{IMAP_PASS}}
realdelete = no
maxconnections = 3
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
folderfilter = lambda folder: folder == '[Gmail]/Sent Mail' or not folder.startswith('[Gmail]')

[Account {{USER}}-work]
localrepository = {{USER}}-local-work
remoterepository = {{USER}}-gmail-work

[Repository {{USER}}-local-work]
type = Maildir
localfolders = ~/Mail/work

[Repository {{USER}}-gmail-work]
type = Gmail
remoteuser = {{WORK_EMAIL}}
remotepass = {{WORK_IMAP_PASS}}
realdelete = no
maxconnections = 3
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
folderfilter = lambda folder: folder == '[Gmail]/Sent Mail' or not folder.startswith('[Gmail]')

[general]
accounts = {{USER}}

[Account {{USER}}]
localrepository = Local
remoterepository = Remote

[Repository Local]
type = Maildir
localfolders = ~/Mail

[Repository Remote]
type = Gmail
remoteuser = {{PROFILE_EMAIL}}
remotepass = {{IMAP_PASS}}
realdelete = no
maxconnections = 3
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
folderfilter = lambda folder: folder == '[Gmail]/Sent Mail' or not folder.startswith('[Gmail]')

[mbnames]
enabled = yes
filename = ~/.mutt/mailboxes
header = "mailboxes "
peritem = "+%(foldername)s"
sep = " "
footer = "\n"

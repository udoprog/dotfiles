[general]
accounts = {{USER}}-personal, {{USER}}-work

[mbnames]
enabled = yes
filename = ~/.mutt/mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"

[Account {{USER}}-personal]
localrepository = {{USER}}-local-personal
remoterepository = {{USER}}-gmail-personal

[Repository {{USER}}-local-personal]
type = Maildir
localfolders = ~/Mail/{{USER}}-personal

[Repository {{USER}}-gmail-personal]
type = Gmail
remoteuser = {{EMAIL}}
remotepass = {{IMAP_PASS}}
realdelete = no
maxconnections = 3
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
folderfilter = lambda folder: folder == '[Gmail]/Sent Mail' or not folder.startswith('[Gmail]')
nametrans = lambda name: name == '[Gmail]/Sent Mail' and 'sent' or name.replace(' ', '_').replace('.', '_').lower()
createfolders = false

[Account {{USER}}-work]
localrepository = {{USER}}-local-work
remoterepository = {{USER}}-gmail-work

[Repository {{USER}}-local-work]
type = Maildir
localfolders = ~/Mail/{{USER}}-work

[Repository {{USER}}-gmail-work]
type = Gmail
remoteuser = {{WORK_EMAIL}}
remotepass = {{WORK_IMAP_PASS}}
realdelete = no
maxconnections = 3
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
folderfilter = lambda folder: folder == '[Gmail]/Sent Mail' or not folder.startswith('[Gmail]')
nametrans = lambda name: name == '[Gmail]/Sent Mail' and 'sent' or name.replace(' ', '_').replace('.', '_').lower()
createfolders = false

[general]
accounts = p, w

[mbnames]
enabled = yes
filename = ~/.mutt/mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"

[Account p]
localrepository = local-personal
remoterepository = gmail-personal

[Repository local-personal]
type = Maildir
localfolders = ~/Mail/p

[Repository gmail-personal]
type = Gmail
remoteuser = {{EMAIL}}
remotepass = {{IMAP_PASS}}
realdelete = no
maxconnections = 3
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
folderfilter = lambda f: (f == '[Gmail]/Sent Mail' or '[Gmail]' not in f) and f != 'INBOX'
nametrans = lambda name: name == '[Gmail]/Sent Mail' and 'sent' or name.replace(' ', '_').replace('.', '_').lower()
createfolders = false

[Account w]
localrepository = local-work
remoterepository = gmail-work

[Repository local-work]
type = Maildir
localfolders = ~/Mail/w

[Repository gmail-work]
type = Gmail
remoteuser = {{WORK_EMAIL}}
remotepass = {{WORK_IMAP_PASS}}
realdelete = no
maxconnections = 3
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
folderfilter = lambda f: (f == '[Gmail]/Sent Mail' or '[Gmail]' not in f) and f != 'INBOX'
nametrans = lambda name: name == '[Gmail]/Sent Mail' and 'sent' or name.replace(' ', '_').replace('.', '_').lower()
createfolders = false

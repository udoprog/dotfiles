#!/bin/bash

set -e

distro=$(detect-distro)

if [[ -z $distro ]]; then
    echo "Could not detect distro"
    exit 1
fi

case $distro in
    "fedora")
        install-if-newer fedora "sudo dnf install"
        ;;
    "gentoo")
        install-if-newer gentoo "sudo emerge"
        ;;
    *)
        echo "Unsupported distro: $distro"
        exit 1
        ;;
esac
